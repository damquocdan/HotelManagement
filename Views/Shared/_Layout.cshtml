<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Global styles */
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #197fca;
        }

            .navbar .navbar-brand img {
                height: 100px;
            }

            .navbar .navbar-nav .nav-link {
                color: white !important;
            }

                .navbar .navbar-nav .nav-link:hover {
                    background-color: #ec4e45;
                    color: white !important;
                }

        .hero-image {
            background: url('~/images/hotel-banner.jpg') no-repeat center center;
            background-size: cover;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }

        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
        }

            footer a {
                color: #197fca;
            }

                footer a:hover {
                    color: #ec4e45;
                }

        /* Custom button styles */
        .btn-primary {
            background-color: #197fca;
            border-color: #197fca;
        }

            .btn-primary:hover {
                background-color: #ec4e45;
                border-color: #ec4e45;
            }

        .btn-secondary {
            background-color: #ec4e45;
            border-color: #ec4e45;
        }

            .btn-secondary:hover {
                background-color: #197fca;
                border-color: #197fca;
            }

        /* Header and footer adjustments */
        header, footer {
            background-color: #197fca;
        }

            header a.nav-link.active {
                color: #fff;
                font-weight: bold;
            }

            header a.nav-link:hover {
                background-color: #ec4e45;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo1.png" alt="Hotel Logo" height="150px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rooms" asp-action="Index">Phòng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Services" asp-action="Index">Dịch vụ</a>
                        </li>
                        @if (Context.Session.GetString("CustomerLogin") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Bookings" asp-action="Index" asp-route-customerId="@Context.Session.GetInt32("CustomerId")">Phòng đã đặt</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Customers" asp-action="Details" asp-route-customerId="@Context.Session.GetInt32("CustomerId")">Thông tin cá nhân</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Logout", "LoginC")">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="LoginC" asp-action="Index">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Customers" asp-action="Create">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="hero-image">
        <img src="~/images/logo.png" alt="Hotel Logo" height="300px" />
    </div>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-center">
        <div class="container">
            <p class="mb-1">&copy; 2025 HotelManagement. Tất cả các quyền được bảo lưu.</p>
            <p class="mb-0">
                Liên hệ: <a href="mailto:info@hotelmanagement.com">info@hotelmanagement.com</a> | Điện thoại: +84 123 456 789
            </p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model HotelManagement.Models.LoginC

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<style>
    body {
        background-color: #f0f4f8; /* Light background color */
        font-family: 'Arial', sans-serif;
    }

    .login-box {
        width: 400px;
        margin: 50px auto;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        padding: 30px;
        border-radius: 12px;
        background-color: #fff;
        text-align: center;
        border: 2px solid #197fca; /* Blue border */
    }

    .login-title {
        font-weight: 700;
        font-size: 28px;
        color: #197fca; /* Primary blue color */
        margin-bottom: 20px;
        font-family: 'Cursive', sans-serif; /* Add a playful font style */
    }

    .custom-input {
        border-radius: 8px;
        margin-top: 10px;
        height: 45px;
        padding-left: 15px;
        font-size: 16px;
        border: 2px solid #197fca; /* Blue border for inputs */
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            border-color: #ec4e45; /* Red border when focused */
            box-shadow: 0 0 5px rgba(236, 78, 69, 0.5); /* Red shadow on focus */
        }

    .btn-primary {
        width: 100%;
        border-radius: 8px;
        background-color: #197fca; /* Primary blue button color */
        border: none;
        padding: 12px;
        color: white;
        font-size: 18px;
        font-weight: bold;
        margin-top: 20px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #156a92; /* Darker blue on hover */
        }

    .alert {
        margin-top: 20px;
        font-size: 14px;
        background-color: #f8d7da; /* Soft red background */
        color: #721c24; /* Dark red text */
    }

        .alert ul {
            list-style-type: none;
            padding: 0;
        }

        .alert li {
            margin-bottom: 5px;
        }
</style>

<div class="login-box">
    <div class="login-title">Khách hàng đăng nhập</div>
    <form asp-action="Index" method="post">
        <!-- Email input -->
        <input asp-for="Email" type="email" class="custom-input form-control form-control-lg"
               placeholder="Email" />

        <!-- Password input -->
        <input asp-for="Password" type="password" class="custom-input form-control form-control-lg"
               placeholder="Mật khẩu" required />

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
    </form>
</div>

@model HotelManagement.Models.Admin

@{
    ViewData["Title"] = "Tạo mới quản trị viên";
}

<h1 style="color: #197fca;">Tạo mới quản trị viên</h1>

<h4 style="color: #ec4e45;">Thông tin quản trị viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" style="background-color: #f9f9f9; padding: 20px; border-radius: 8px; border: 1px solid #ddd;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="color: #197fca;">Họ và tên</label>
                <input asp-for="Name" class="form-control" style="border-color: #197fca;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="color: #197fca;">Email</label>
                <input asp-for="Email" class="form-control" style="border-color: #197fca;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label" style="color: #197fca;">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" style="border-color: #197fca;" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="color: #197fca;">Mật khẩu</label>
                <input asp-for="Password" class="form-control" style="border-color: #197fca;" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" style="background-color: #ec4e45; border-color: #ec4e45;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: #ec4e45;">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

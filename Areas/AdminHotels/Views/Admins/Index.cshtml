@model IEnumerable<HotelManagement.Models.Admin>

@{
    ViewData["Title"] = "Danh Sách Quản Trị Viên";
}

<h1 style="color: #197fca;">Danh Sách Quản Trị Viên</h1>

<p>
    <a asp-action="Create" style="color: #197fca;">Tạo Mới</a>
</p>
<table class="table table-striped">
    <thead style="background-color: #197fca; color: white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AdminId" style="color: #197fca;">Chỉnh Sửa</a> 
                    <a asp-action="Details" asp-route-id="@item.AdminId" style="color: #197fca;">Chi Tiết</a> 
                    <a asp-action="Delete" asp-route-id="@item.AdminId" style="color: #ec4e45;">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

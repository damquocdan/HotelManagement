@model HotelManagement.Models.Room

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<h1>Xóa Phòng</h1>

<h3>Bạn có chắc chắn muốn xóa phòng này không?</h3>

<div>
    <h4>Thông Tin Phòng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.RoomType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.PricePerNight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePerNight)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>

@section Styles {
    <style>
        /* Custom colors and styling */
        h1, h3, h4 {
            color: #197fca;
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-bottom: 15px;
        }

        .btn-danger {
            background-color: #ec4e45;
            border-color: #ec4e45;
        }

            .btn-danger:hover {
                background-color: #c23c36;
                border-color: #c23c36;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #ec4e45;
                border-color: #ec4e45;
            }

        .text-danger {
            color: #ec4e45;
        }
    </style>
}

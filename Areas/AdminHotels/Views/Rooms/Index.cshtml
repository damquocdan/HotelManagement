@model IEnumerable<HotelManagement.Models.Room>

@{
    ViewData["Title"] = "Danh Sách Phòng";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<style>
    .btn-primary {
        background-color: #197fca;
        border-color: #197fca;
    }

        .btn-primary:hover {
            background-color: #1565c0;
            border-color: #1565c0;
        }

    .text-primary {
        color: #197fca !important;
    }

    .text-danger {
        color: #ed3d34 !important;
    }

    .table thead th {
        background-color: #197fca;
        color: white;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }
</style>

<div class="  mt-4">
    <h1 class="text-primary mb-4"><i class="fas fa-bed"></i> Danh Sách Phòng</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Tạo Mới</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th><i class="fas fa-hashtag"></i> @Html.DisplayNameFor(model => model.RoomNumber)</th>
                    <th><i class="fas fa-th-large"></i> @Html.DisplayNameFor(model => model.RoomType)</th>
                    <th><i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.PricePerNight)</th>
                    <th><i class="fas fa-check-circle"></i> @Html.DisplayNameFor(model => model.Status)</th>
                    <th><i class="fas fa-hotel"></i> @Html.DisplayNameFor(model => model.Hotel)</th>
                    <th><i class="fas fa-cogs"></i> Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.RoomType)</td>
                        <td>@Html.DisplayFor(modelItem => item.PricePerNight)</td>
                        <td>
                            @if (item.Status == "Available")
                            {
                                <span class="badge bg-success">Có sẵn</span>
                            }
                            else if (item.Status == "Booked")
                            {
                                <span class="badge bg-danger">Đã đặt</span>
                            }
                            else if (item.Status == "Maintenance")
                            {
                                <span class="badge bg-warning">Bảo trì</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Hotel.Name)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Chỉnh Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i> Chi Tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
@model HotelManagement.Models.Room

@{
    ViewData["Title"] = "Chi Tiết Phòng";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<style>
    .btn-primary {
        background-color: #197fca;
        border-color: #197fca;
        color: white;
    }

        .btn-primary:hover {
            background-color: #1565c0;
            border-color: #1565c0;
        }

    .btn-secondary {
        background-color: #f0f0f0;
        border-color: #ddd;
        color: #333;
    }

        .btn-secondary:hover {
            background-color: #e0e0e0;
        }

    .text-primary {
        color: #197fca !important;
    }

    .text-danger {
        color: #ed3d34 !important;
    }
</style>

<div class="container mt-4">
    <h1 class="text-primary mb-4"><i class="fas fa-info-circle"></i> Chi Tiết Phòng</h1>

    <h4 class="text-primary mb-3"><i class="fas fa-bed"></i> Thông Tin Phòng</h4>
    <hr style="border-color: #197fca; margin-bottom: 25px;" />

    <dl class="row">
        <dt class="col-sm-2 text-primary"><i class="fas fa-hashtag"></i> @Html.DisplayNameFor(model => model.RoomNumber)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RoomNumber)</dd>
        <dt class="col-sm-2 text-primary"><i class="fas fa-th-large"></i> @Html.DisplayNameFor(model => model.RoomType)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RoomType)</dd>
        <dt class="col-sm-2 text-primary"><i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.PricePerNight)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PricePerNight)</dd>
        <dt class="col-sm-2 text-primary"><i class="fas fa-check-circle"></i> @Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-10">
            @if (Model.Status == "Available")
            {
                <span class="badge bg-success">Có sẵn</span>
            }
            else if (Model.Status == "Booked")
            {
                <span class="badge bg-danger">Đã đặt</span>
            }
            else if (Model.Status == "Maintenance")
            {
                <span class="badge bg-warning">Bảo trì</span>
            }
            else
            {
                <span class="badge bg-secondary">Không xác định</span>
            }
        </dd>
        <dt class="col-sm-2 text-primary"><i class="fas fa-hotel"></i> @Html.DisplayNameFor(model => model.Hotel)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Hotel.Name)</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.RoomId" class="btn btn-primary"><i class="fas fa-edit"></i> Chỉnh Sửa</a>
        <a asp-action="Index" class="btn btn-secondary ml-2"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
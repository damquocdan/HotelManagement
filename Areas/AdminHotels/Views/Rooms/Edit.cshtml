@model HotelManagement.Models.Room

@{
    ViewData["Title"] = "Chỉnh Sửa Phòng";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #197fca;
        border-color: #197fca;
        color: white;
    }

        .btn-primary:hover {
            background-color: #1565c0;
            border-color: #1565c0;
        }

    .btn-secondary {
        background-color: #f0f0f0;
        border-color: #ddd;
        color: #333;
    }

        .btn-secondary:hover {
            background-color: #e0e0e0;
        }

    .text-primary {
        color: #197fca !important;
    }

    .text-danger {
        color: #ed3d34 !important;
    }
</style>

<div class="container mt-4">
    <h1 class="text-primary mb-4"><i class="fas fa-edit"></i> Chỉnh Sửa Phòng</h1>

    <h4 class="text-primary mb-3"><i class="fas fa-bed"></i> Thông Tin Phòng</h4>
    <hr style="border-color: #197fca; margin-bottom: 25px;" />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoomId" />

                <div class="form-group">
                    <label asp-for="HotelId" class="control-label text-primary"><i class="fas fa-hotel"></i> Khách Sạn</label>
                    <select asp-for="HotelId" class="form-control" asp-items="ViewBag.HotelId"></select>
                    <span asp-validation-for="HotelId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RoomNumber" class="control-label text-primary"><i class="fas fa-hashtag"></i> Số Phòng</label>
                    <input asp-for="RoomNumber" class="form-control" />
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RoomType" class="control-label text-primary"><i class="fas fa-th-large"></i> Loại Phòng</label>
                    <input asp-for="RoomType" class="form-control" />
                    <span asp-validation-for="RoomType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PricePerNight" class="control-label text-primary"><i class="fas fa-dollar-sign"></i> Giá Mỗi Đêm</label>
                    <input asp-for="PricePerNight" class="form-control" />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label text-primary"><i class="fas fa-check-circle"></i> Tình Trạng</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Available">Có sẵn</option>
                        <option value="Booked">Đã đặt</option>
                        <option value="Maintenance">Bảo trì</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary ml-2"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
@model IEnumerable<HotelManagement.Models.Hotel>

@{
    ViewData["Title"] = "Danh Sách Khách Sạn";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<h1 style="color: #197fca;">Danh Sách Khách Sạn</h1>

<p>
    <a asp-action="Create" style="color: #197fca;">Tạo Mới</a>
</p>

<table class="table" style="border: 1px solid #197fca;">
    <thead style="background-color: #197fca; color: white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HotelId" style="color: #197fca;">Chỉnh Sửa</a> 
                    <a asp-action="Details" asp-route-id="@item.HotelId" style="color: #197fca;">Chi Tiết</a> 
                    <a asp-action="Delete" asp-route-id="@item.HotelId" style="color: #ec4e45;">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model HotelManagement.Models.Service

@{
    ViewData["Title"] = "Tạo Mới";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #ed3d34;
        border-color: #ed3d34;
        color: white;
    }

        .btn-primary:hover {
            background-color: #d1342b;
            border-color: #d1342b;
        }

    .btn-secondary {
        background-color: #197fca;
        border-color: #197fca;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #1565c0;
            border-color: #1565c0;
        }

    .text-primary {
        color: #197fca !important;
    }

    .text-danger {
        color: #ed3d34 !important;
    }
</style>

<div class="container mt-4">
    <h1 class="text-primary mb-4"><i class="fas fa-plus-circle"></i> Tạo Dịch Vụ Mới</h1>

    <h4 class="text-primary mb-3"><i class="fas fa-concierge-bell"></i> Dịch Vụ</h4>
    <hr style="border-color: #197fca; margin-bottom: 25px;" />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label text-primary"><i class="fas fa-signature"></i> Tên Dịch Vụ</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label text-primary"><i class="fas fa-file-alt"></i> Mô Tả</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label text-primary"><i class="fas fa-dollar-sign"></i> Giá</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
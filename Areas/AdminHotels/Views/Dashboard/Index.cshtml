@{
    ViewData["Title"] = "Trang Thống Kê";
}

<!-- Include Chart.js -->
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="row" style="margin-bottom: 30px;">
    <div class="col-md-4" style="text-align: center; background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
        <h3 style="font-size: 18px; color: #343a40;">Tổng Số Khách Sạn</h3>
        <p style="font-size: 24px; color: #007bff;">@ViewBag.TotalHotels</p>
    </div>

    <div class="col-md-4" style="text-align: center; background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
        <h3 style="font-size: 18px; color: #343a40;">Tổng Số Nhân Viên</h3>
        <p style="font-size: 24px; color: #007bff;">@ViewBag.TotalStaff</p>
    </div>

    <div class="col-md-4" style="text-align: center; background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
        <h3 style="font-size: 18px; color: #343a40;">Tổng Số Phòng</h3>
        <p style="font-size: 24px; color: #007bff;">@ViewBag.TotalRooms</p>
    </div>
</div>

<div class="row" style="margin-bottom: 30px;">
    <div class="col-md-4" style="text-align: center; background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
        <h3 style="font-size: 18px; color: #343a40;">Tổng Số Khách Hàng</h3>
        <p style="font-size: 24px; color: #007bff;">@ViewBag.TotalCustomers</p>
    </div>

    <div class="col-md-4" style="text-align: center; background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
        <h3 style="font-size: 18px; color: #343a40;">Tổng Số Đặt Phòng</h3>
        <p style="font-size: 24px; color: #007bff;">@ViewBag.TotalBookings</p>
    </div>

    <div class="col-md-4" style="text-align: center; background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
        <h3 style="font-size: 18px; color: #343a40;">Tổng Số Dịch Vụ</h3>
        <p style="font-size: 24px; color: #007bff;">@ViewBag.TotalServices</p>
    </div>
</div>

<!-- Biểu đồ thống kê -->
<div class="row">
    <div class="col-md-12">
        <canvas id="statsChart"></canvas>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById("statsChart").getContext("2d");
        var statsChart = new Chart(ctx, {
            type: "bar",
            data: {
                labels: ["Khách Sạn", "Nhân Viên", "Phòng", "Khách Hàng", "Đặt Phòng", "Dịch Vụ"],
                datasets: [{
                    label: "Thống Kê",
                    data: [
    @ViewBag.TotalHotels,
    @ViewBag.TotalStaff,
    @ViewBag.TotalRooms,
    @ViewBag.TotalCustomers,
    @ViewBag.TotalBookings,
    @ViewBag.TotalServices
                    ],
                    backgroundColor: [
                        "rgba(255, 99, 132, 0.7)",
                        "rgba(54, 162, 235, 0.7)",
                        "rgba(255, 206, 86, 0.7)",
                        "rgba(75, 192, 192, 0.7)",
                        "rgba(153, 102, 255, 0.7)",
                        "rgba(255, 159, 64, 0.7)"
                    ],
                    borderColor: [
                        "rgba(255, 99, 132, 1)",
                        "rgba(54, 162, 235, 1)",
                        "rgba(255, 206, 86, 1)",
                        "rgba(75, 192, 192, 1)",
                        "rgba(153, 102, 255, 1)",
                        "rgba(255, 159, 64, 1)"
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>

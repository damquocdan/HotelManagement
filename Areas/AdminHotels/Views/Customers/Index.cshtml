@model IEnumerable<HotelManagement.Models.Customer>

@{
    ViewData["Title"] = "Danh Sách Khách Hàng";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<style>
    .btn-primary {
        background-color: #197fca;
        border-color: #197fca;
    }

        .btn-primary:hover {
            background-color: #1565c0;
            border-color: #1565c0;
        }

    .btn-warning {
        background-color: #ed3d34;
        border-color: #ed3d34;
        color: white;
    }

        .btn-warning:hover {
            background-color: #d1342b;
            border-color: #d1342b;
        }

    .btn-info {
        background-color: #197fca;
        border-color: #197fca;
        color: white;
    }

        .btn-info:hover {
            background-color: #1565c0;
            border-color: #1565c0;
        }

    .btn-danger {
        background-color: #ed3d34;
        border-color: #ed3d34;
        color: white;
    }

        .btn-danger:hover {
            background-color: #d1342b;
            border-color: #d1342b;
        }

    .text-primary {
        color: #197fca !important;
    }

    .text-danger {
        color: #ed3d34 !important;
    }

    .table thead th {
        background-color: #197fca;
        color: white;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }
</style>

<div class="  mt-4">
    <h1 class="text-primary mb-4"><i class="fas fa-users"></i> Danh Sách Khách Hàng</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Tạo Mới</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th><i class="fas fa-signature"></i> @Html.DisplayNameFor(model => model.Name)</th>
                    <th><i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)</th>
                    <th><i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Phone)</th>
                    <th><i class="fas fa-venus-mars"></i> @Html.DisplayNameFor(model => model.Gender)</th>
                    <th><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.DateOfBirth)</th>
                    <th><i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Address)</th>
                    <th><i class="fas fa-lock"></i> @Html.DisplayNameFor(model => model.Password)</th>
                    <th><i class="fas fa-cogs"></i> Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Chỉnh Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i> Chi Tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
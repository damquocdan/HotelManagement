@model HotelManagement.Models.Customer

@{
    ViewData["Title"] = "Tạo Mới Khách Hàng";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #197fca;
        border-color: #197fca;
        color: white;
    }

        .btn-primary:hover {
            background-color: #1565c0;
            border-color: #1565c0;
        }

    .btn-secondary {
        background-color: #ed3d34;
        border-color: #ed3d34;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #d1342b;
            border-color: #d1342b;
        }

    .text-primary {
        color: #197fca !important;
    }

    .text-danger {
        color: #ed3d34 !important;
    }
</style>

<div class="container mt-4">
    <h1 class="text-primary mb-4"><i class="fas fa-user-plus"></i> Tạo Mới Khách Hàng</h1>

    <h4 class="text-primary mb-3"><i class="fas fa-user"></i> Thông Tin Khách Hàng</h4>
    <hr style="border-color: #197fca; margin-bottom: 25px;" />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label text-primary"><i class="fas fa-signature"></i> Họ và Tên</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label text-primary"><i class="fas fa-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label text-primary"><i class="fas fa-phone"></i> Số Điện Thoại</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="control-label text-primary"><i class="fas fa-venus-mars"></i> Giới Tính</label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label text-primary"><i class="fas fa-calendar-alt"></i> Ngày Sinh</label>
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label text-primary"><i class="fas fa-map-marker-alt"></i> Địa Chỉ</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label text-primary"><i class="fas fa-lock"></i> Mật Khẩu</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại Danh Sách</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
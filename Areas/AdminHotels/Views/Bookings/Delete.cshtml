@model HotelManagement.Models.Booking

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<h1 style="color: #197fca;">Xóa Đặt Phòng</h1>

<h3 style="color: #ec4e45;">Bạn chắc chắn muốn xóa đặt phòng này?</h3>
<div>
    <h4 style="color: #197fca;">Thông Tin Đặt Phòng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.CheckInDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckInDate)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.CheckOutDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckOutDate)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerId)
        </dd>
        <dt class="col-sm-2" style="color: #197fca;">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Xóa" class="btn btn-danger" style="background-color: #ec4e45; border-color: #ec4e45;" />
        <a asp-action="Index" style="color: #197fca;">Quay Lại Danh Sách</a>
    </form>
</div>

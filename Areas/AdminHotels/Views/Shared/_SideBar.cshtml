@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<style>
    .main-sidebar {
        background-color: #f8f9fa;
        width: 250px;
        top: 0;
        left: 0;
        height: 100vh;
        z-index: 1040;
        border-right: 1px solid #e0e0e0; /* Border mềm mại hơn */
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.05); /* Thêm đổ bóng nhẹ */
    }

    .custom-brand-link {
        background-color: #ed3d34 !important;
        color: white !important;
        padding: 18px 15px; /* Tăng padding */
        display: flex;
        align-items: center;
        border-bottom: 1px solid #f0f0f0; /* Border mềm mại hơn */
    }

    .custom-user-panel {
        border-top: 1px solid #f0f0f0;
        background-color: white;
        padding: 12px 15px; /* Tăng padding */
    }

    .custom-nav-link {
        color: #333; /* Màu chữ tối hơn */
        padding: 12px 15px; /* Tăng padding */
        border-bottom: 1px solid #f0f0f0; /* Border mềm mại hơn */
        transition: background-color 0.3s ease; /* Thêm hiệu ứng chuyển động */
    }

        .custom-nav-link:hover, .custom-nav-link.active {
            background-color: #f0f0f0;
        }

    .custom-nav-link-sub {
        color: #333;
        padding: 10px 35px; /* Tăng padding */
        transition: background-color 0.3s ease;
    }

        .custom-nav-link-sub:hover, .custom-nav-link-sub.active {
            background-color: #e8e8e8;
        }

    .icon-container {
        width: 30px;
        display: flex;
        justify-content: center;
        margin-right: 8px; /* Thêm khoảng cách giữa icon và text */
    }

    .logout-link {
        display: block;
        margin-top: 8px; /* Tăng margin */
        color: #197fca;
        transition: color 0.3s ease;
    }

        .logout-link:hover {
            color: #1565c0; /* Màu khi hover */
        }
</style>
<aside class="main-sidebar sidebar-custom elevation-4 position-fixed">

@model IEnumerable<HotelManagement.Models.ServiceUsage>

@{
    ViewData["Title"] = "Danh Sách Dịch Vụ Sử Dụng";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<h1 style="color: #197fca;">Danh Sách Dịch Vụ Sử Dụng</h1>
<table class="table table-striped">
    <thead>
        <tr style="background-color: #197fca; color: white;">
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                Khách hàng
            </th>
            <th>
                Phòng số
            </th>
            <th>
                Khách sạn
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booking.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booking.Room.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booking.Room.Hotel.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Name)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.UsageId" class="btn btn-danger" style="background-color: #ec4e45; border-color: #ec4e45; color: white;">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

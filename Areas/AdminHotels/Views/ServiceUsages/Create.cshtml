@model HotelManagement.Models.ServiceUsage

@{
    ViewData["Title"] = "Tạo Mới";
    Layout = "~/Areas/AdminHotels/Views/Shared/Admin.cshtml";
}

<h1 style="color: #197fca;">Tạo Dịch Vụ Sử Dụng</h1>

<h4 style="color: #ec4e45;">Dịch Vụ Sử Dụng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- BookingId Dropdown -->
            <div class="form-group">
                <label asp-for="BookingId" class="control-label" style="color: #197fca;"></label>
                <select asp-for="BookingId" class="form-control" asp-items="ViewBag.BookingId"></select>
                <span asp-validation-for="BookingId" class="text-danger"></span>
            </div>

            <!-- ServiceId Dropdown -->
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label" style="color: #197fca;"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <!-- Quantity Field -->
            <div class="form-group">
                <label asp-for="Quantity" class="control-label" style="color: #197fca;"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- TotalPrice Field -->
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label" style="color: #197fca;"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" style="background-color: #197fca; border-color: #197fca;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: #197fca;">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

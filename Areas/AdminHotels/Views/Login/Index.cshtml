@model HotelManagement.Areas.AdminHotels.Models.Login
@{
    Layout = null;
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-4">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng Nhập Quản Trị Viên</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Source Sans Pro', sans-serif;
        }

        .login-box {
            width: 450px;
            margin: 100px auto;
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
            padding: 30px;
            border-radius: 10px;
            background-color: #fff;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-title {
            font-weight: 700;
            font-size: 28px;
            color: #197fca;
            margin-top: 10px;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        .input-label {
            font-size: 18px;
            font-weight: 600;
            color: #ed3d34;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
        }

        .custom-input {
            border-radius: 8px;
            height: 48px;
            border: 2px solid #197fca;
            padding-left: 40px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

            .custom-input:focus {
                border-color: #ed3d34;
                box-shadow: 0 0 5px rgba(237, 61, 52, 0.3);
            }

        .input-icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #197fca;
            font-size: 18px;
        }

        .btn-primary {
            width: 100%;
            border-radius: 8px;
            padding: 12px;
            background-color: #ed3d34;
            border-color: #ed3d34;
            font-size: 18px;
            font-weight: 600;
            margin-top: 30px;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #197fca;
                border-color: #197fca;
            }

        .alert {
            margin-top: 25px;
            font-size: 15px;
            border-color: #ed3d34;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-header">
            <i class="fas fa-user-shield fa-3x" style="color: #ed3d34;"></i>
            <div class="login-title">Đăng Nhập Quản Trị Viên</div>
        </div>

        <form asp-action="Index" method="post">
            <!-- Email input -->
            <div class="form-group">
                <label class="input-label">
                    <i class="fas fa-envelope mr-2"></i> Địa Chỉ Email
                </label>
                <div class="position-relative">
                    <i class="fas fa-envelope input-icon"></i>
                    <input asp-for="Email" type="email" class="custom-input form-control"
                           placeholder="Nhập email của bạn" required />
                </div>
            </div>

            <!-- Password input -->
            <div class="form-group">
                <label class="input-label">
                    <i class="fas fa-lock mr-2"></i> Mật Khẩu
                </label>
                <div class="position-relative">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="Password" type="password" class="custom-input form-control"
                           placeholder="Nhập mật khẩu" required />
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-sign-in-alt mr-2"></i> Đăng Nhập
            </button>
        </form>
    </div>

    <!-- Scripts -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>